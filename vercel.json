{
    "github": {
        "silent": true
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Real-IP",
                    "value": "$remote_addr"
                },
                {
                    "key": "X-Forwarded-For",
                    "value": "$proxy_add_x_forwarded_for"
                },
                {
                    "key": "Host",
                    "value": "$http_host"
                }
            ]
        }
    ],
    "functions": {
        "api/proxy.js": {
          "memory": 128,
          "maxDuration": 10
        }
      },
    "rewrites": [
        {
          "source": "/api/(.*)",
          "destination": "/api/proxy.js"
        }
      ]
}
